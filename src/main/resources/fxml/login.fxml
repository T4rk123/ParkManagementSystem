<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.amusementpark.controllers.LoginController" spacing="25.0" style="-fx-background-color: linear-gradient(to bottom, #e3f2fd, #f5f5f5); -fx-padding: 70;"> <!-- Увеличенные отступы для симметрии -->
    <children>

        <VBox spacing="8.0" alignment="CENTER">
            <children>
                <HBox alignment="CENTER" spacing="0.0">
                    <children>
                        <Label text="Информационно-справочная система" wrapText="true" maxWidth="450" style="-fx-font-size: 22px; -fx-font-family: 'Segoe UI', sans-serif; -fx-font-weight: bold; -fx-text-fill: linear-gradient(to right, #3498db, #2980b9); -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 1);" />
                    </children>
                </HBox>
                <HBox alignment="CENTER" spacing="0.0">
                    <children>
                        <Label text="парка развлечений" wrapText="true" maxWidth="450" style="-fx-font-size: 22px; -fx-font-family: 'Segoe UI', sans-serif; -fx-font-weight: bold; -fx-text-fill: linear-gradient(to right, #e74c3c, #f39c12, #f1c40f); -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 6, 0, 0, 2);" />
                    </children>
                </HBox>
            </children>
        </VBox>

        <VBox spacing="18.0" alignment="CENTER">
            <children>
                <HBox alignment="CENTER" spacing="12.0">
                    <Label text="Логин:" style="-fx-font-weight: bold; -fx-text-fill: #0277bd; -fx-font-size: 15px; -fx-alignment: center-right; -fx-pref-width: 70;" />
                    <TextField fx:id="usernameField" promptText="Введите логин" prefWidth="300" style="-fx-background-radius: 5; -fx-padding: 8;" />
                </HBox>
                <HBox alignment="CENTER" spacing="12.0">
                    <Label text="Пароль:" style="-fx-font-weight: bold; -fx-text-fill: #0277bd; -fx-font-size: 15px; -fx-alignment: center-right; -fx-pref-width: 70;" />
                    <PasswordField fx:id="passwordField" promptText="Введите пароль" prefWidth="300" style="-fx-background-radius: 5; -fx-padding: 8;" />
                </HBox>
            </children>
        </VBox>

        <HBox alignment="CENTER" spacing="0.0">
            <children>
                <Button mnemonicParsing="false" onAction="#handleLogin" text="Войти" style="-fx-background-color: #2e7d32; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px; -fx-background-radius: 8; -fx-padding: 12 50; -fx-min-width: 150;" />
            </children>
        </HBox>
        <HBox alignment="CENTER" spacing="0.0">
            <children>
                <Button mnemonicParsing="false" onAction="#handleRegister" text="Регистрация" style="-fx-background-color: #bdc3c7; -fx-text-fill: #34495e; -fx-font-weight: bold; -fx-font-size: 14px; -fx-background-radius: 5; -fx-padding: 8 30; -fx-min-width: 120;" />
            </children>
        </HBox>
    </children>
</VBox>